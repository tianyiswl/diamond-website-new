    "dev:debug": "nodemon --inspect server.js",
    "dev:preview": "node tools/live-preview.js",
    "dev:advanced": "node tools/dev-watcher.js",
    "port:check": "node tools/port-manager.js --report",
    "port:find": "node tools/port-manager.js --find",
    "port:manage": "node tools/port-manager.js",
    "config:check": "node tools/config-template-manager.js --check",
    "config:generate": "node tools/config-template-manager.js --all",
    "config:interactive": "node tools/config-template-manager.js --interactive",
    "admin:setup": "node setup-admin.js",
    "admin:password": "node tools/generate-admin-password.js",
    "admin:manage": "node tools/admin-manager.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"Production build not configured yet\"",
    "clean": "rimraf uploads/temp && echo \"Cleaned temporary files\""
