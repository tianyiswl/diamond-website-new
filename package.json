    "path": "^0.12.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chokidar": "^4.0.3",
    "nodemon": "^3.1.10",
    "sharp": "^0.34.2",
    "ws": "^8.18.2"
